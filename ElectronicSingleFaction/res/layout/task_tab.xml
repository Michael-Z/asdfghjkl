<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/music_radio"
            android:layout_width="fill_parent"
            android:layout_height="53.0dip"
            android:layout_gravity="top"
            android:background="@drawable/cm_ck_sync_now_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >


            <RadioButton
                android:id="@+id/music_radio_button0"
                style="@style/category_tab_bottom"
                android:layout_height="fill_parent"
                android:layout_marginTop="2.0dip"
                android:gravity="center"
                android:background="@drawable/cm_ck_top_represent"
                android:tag="rating_radio_button3"
                android:text="新任务" />
            
            <RadioButton
                android:id="@+id/music_radio_button1"
                style="@style/category_tab_bottom"
                android:layout_height="fill_parent"
                android:layout_marginTop="2.0dip"
                android:gravity="center"
                android:tag="rating_radio_button2"
                android:text="进行中" />
            
            
            <RadioButton
                android:id="@+id/music_radio_button2"
                style="@style/category_tab_bottom"
                android:layout_height="fill_parent"
                android:layout_marginTop="2.0dip"
                android:gravity="center"
                android:tag="rating_radio_button2"
                android:text="已完成" />
        </RadioGroup>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:background="#f0f0f0f0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="0.0"
            android:visibility="gone" />
    </LinearLayout>

</TabHost>