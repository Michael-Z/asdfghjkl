<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:background="#f0f0f0f0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_gravity="bottom"
            android:background="@drawable/cm_ck_sync_now_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/cm_ck_main_radio"
                android:layout_width="fill_parent"
                android:layout_height="53.0dip"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio_button0"
                    style="@style/main_tab_bottom"
                    android:layout_marginTop="2.0dip"
                    android:background="@drawable/cm_ck_home_btn_bg_s"
                    android:drawableTop="@drawable/cm_ck_recommend"
                    android:tag="radio_button0"
                    android:text="任务" />

                <RadioButton
                    android:id="@+id/radio_button2"
                    style="@style/main_tab_bottom"
                    android:layout_marginTop="2.0dip"
                    android:drawableTop="@drawable/cm_ck_rating"
                    android:tag="radio_button3"
                    android:text="位置" />

                <RadioButton
                    android:id="@+id/radio_button3"
                    style="@style/main_tab_bottom"
                    android:layout_marginTop="2.0dip"
                    android:drawableTop="@drawable/cm_ck_downloads"
                    android:tag="radio_button5"
                    android:text="消息" />

                <RadioButton
                    android:id="@+id/radio_button5"
                    style="@style/main_tab_bottom"
                    android:layout_marginTop="2.0dip"
                    android:drawableTop="@drawable/cm_ck_category"
                    android:tag="radio_button2"
                    android:text="关于" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

</TabHost>